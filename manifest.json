{
    "manifest_version": 3,
    "name": "Appedle: LightLoom",
    "version": "0.1",
    "description": "Control and save brightness settings for any webpage.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  